          script.
              function drawLine() {
                  var path = document.getElementById('resultpath').innerHTML;
                  var paths = path.split(',');
                  for(var i=1;i<paths.length;i++){
                        showImage(paths[i].toString());
                        showImage(paths[i].split('').reverse().join(''));
                      console.log(paths[i].toString());
                  }

              }
              function showImage(id){
                  console.log(id);
                  var img = document.getElementById(id);
                  if(img !== null){img.style.visibility = 'visible';}
              }

              window.onload = drawLine();





